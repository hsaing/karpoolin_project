<h3 class="pull-left">List of all Students</h3>
</br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email address</th>
      <th>Gender</th>
      <th>Home School Name</th>
      <th>School Zipcode</th>
      <th>School Phone Number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
		    <td><%= student.gender == "M" ? "Male" : "Female"%></td>
        <td><%= student.home_school_name %></td>
        <td><%= student.school_address_zipcode %></td>
        <td><%= student.school_phone_number %></td>
        <td><%= link_to 'Show', student_path(student.id) %></td>
        <td>
          <a href="<%= edit_student_path(student.id) %>" data-reveal-id="student_edit_modal" class="btn btn-mini">Edit</a>
        </td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

<%= link_to 'To add a new Student click here', new_student_path, :class => "pull-right" %>
