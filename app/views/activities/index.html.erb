<h3 class="pull-left">List all activities</h3>
<%= link_to 'Add a new Activity here', new_activity_path, :class => "pull-right" %>
<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Activity Address:Street</th>
      <th>City </th>
      <th>Zipcode</th>
      <th>State</th>
      <th>Contact Phone Number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>


  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_name %></td>
        <td><%= activity.activity_start_date.strftime("%B-%d-%Y")%></td>
        <td><%= activity.activity_end_date.strftime("%B-%d-%Y")%></td>
        <td><%= activity.activity_start_time.strftime("%I:%M %p")%></td>
        <td><%= activity.activity_end_time.strftime("%I:%M %p")%></td>
        <td><%= activity.address_street %></td>
        <td><%= activity.address_city %></td>
        <td><%= activity.address_zipcode %></td>
        <td><%= state_name(activity.address_state) %></td>
        <td><%= activity.phone_number %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
